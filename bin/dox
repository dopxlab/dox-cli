#!/usr/bin/env bash
set -euo pipefail

echo "▶️ DOX CLI running..."
echo "Arguments: $@"

DOX_DIR="/usr/local/lib/dox"

export DOX_DIR

source "$DOX_DIR/lib/configure.sh"
source "$DOX_DIR/lib/action.sh"

case "${1:-}" in
  deploy)
    deploy
    ;;
  configure)
    configure
    ;;
  *)
    echo "❌ Unknown command: ${1:-}"
    echo "Usage: dox [deploy|configure]"
    ;;
esac
